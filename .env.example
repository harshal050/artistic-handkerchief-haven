
# MongoDB Connection
# Replace with your MongoDB Atlas URI
# Make sure to URL-encode your password and include the database name after the hostname
VITE_MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset  # For browser uploads, create an unsigned upload preset in Cloudinary
